{
  "name": "workflowy-theme-generator",
  "version": "0.0.2",
  "description": "A Theme Generator For Workflowy",
  "scripts": {
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "start": "run-p serve watch",
    "serve": "browser-sync start --server --files \"style.css, index.html\"",
    "watch": "onchange \"src/styles/\" -- run-s build:** publish:**",
    "build": "npm-run-all build:**",
    "build:css": "postcss ./src/styles/style.css -o ./style.css",
    "publish": "npm-run-all publish:css:**",
    "publish:css:minify": "postcss --no-map ./style.css -u cssnano -d ./dist",
    "publish:css:prettify": "prettier ./dist/style.css --write"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "auto-changelog": "^1.4.5",
    "cssnano": "^3.10.0",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss": "^6.0.19",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-safe-important": "^1.1.0",
    "prettier": "^1.11.1"
  }
}
